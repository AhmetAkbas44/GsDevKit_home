#! /bin/bash
#=========================================================================
# Copyright (c) 2015 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] [-c https | ssh ] <gsdevkit-project-name> <directory-name>

Clone the given <gsdevkit-project-name> using either https or ssh.
ssh is the default.


OPTIONS
  -h
     display help
  -c https | ssh
     clone using https (https://github.com) or ssh (git@github.com)
     ssh is the default 

EXAMPLES
   $(basename $0) -h
   $(basename $0) GsDevKit_gemstone gemstone
   $(basename $0) -c ssh GsDevKit_gemstone gemstone
   $(basename $0) -c https GsDevKit_gemstone gemstone

HELP
}
useHttpsForGit=${GS_HOME}/bin/private/.useHttpsForGit

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi

if [ -e "$useHttpsForGit" ] ; then
  mode="https"
else
  mode="ssh"
fi

while getopts ":hc:" OPT ; do
  case "$OPT" in
    h) usage; exit 0;;${gsdevKitProject}
    c) mode="${OPTARG}";;
    *) usage; exit 1;;
  esac
done
shift $(($OPTIND - 1))

if [ $# -ne 2 ]; then
  usage; exit 1
fi
gsDevKitProject=$1
directoryName=$2

if [ "${mode}" = "ssh" ] ; then
  rm -rf $useHttpsForGit${gsdevKitProject}
  url="git@github.com:GsDevKit/${gsdevKitProject}.git"
elif [  "${mode}" = "https" ] ; then
  cat - > $useHttpsForGit << EOF
the presence of this file means that GsDevKit_* will clone git projects using https protocol
EOF
  url="https://github.com/GsDevKit/${gsdevKitProject}.git"
else 
  usage; exit 1
fi

if [ ! -d "${directoryName}" ] ; then
  git clone $url $directoryName
fi

echo "...finished $(basename $0)"
