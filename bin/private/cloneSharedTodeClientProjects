#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] [-c https | ssh ]

Clone the Github repositories used by the tODE client to \$GS_HOME/shared/repos.

OPTIONS
  -h
     display help
  -c https | ssh
     clone using https (https://github.com) or ssh (git@github.com)
     ssh is the default 

EXAMPLES
   $(basename $0) -h
   $(basename $0) 
   $(basename $0) -c ssh
   $(basename $0) -c https

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi

pushd ${GS_SHARED_REPO} >& /dev/null
  ${GS_HOME}/bin/private/cloneGitHubProject $* dalehenrich metacello-work metacello-work
  ${GS_HOME}/bin/private/cloneGitHubProject $* dalehenrich filetree filetree
  ${GS_HOME}/bin/private/cloneGitHubProject $* dalehenrich tode tode
popd >& /dev/null

echo "...finished $(basename $0)"
