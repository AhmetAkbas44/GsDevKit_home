#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] [-c https | ssh ]


OPTIONS
  -h
     display help
  -c https | ssh
     clone using https (https://github.com) or ssh (git@github.com)
     ssh is the default 

EXAMPLES
   $(basename $0) -h
   $(basename $0) 
   $(basename $0) -c ssh
   $(basename $0) -c https

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env

modeArg=""
while getopts "hnc:" OPT ; do
  case "$OPT" in
    h) usage; exit 0;;
    c) modeArg=" -c ${OPTARG} ";;
    *) usage; exit 1;;
  esac
done
shift $(($OPTIND - 1))

pushd ${GS_HOME} >& /dev/null
  ${GS_HOME}/bin/private/cloneGitHubProject $modeArg GsDevKit GsDevKit_sys_local local
  cd local
  git checkout -b gsdevkit
  cd ..
  pushd sys >& /dev/null
    ln -s ../local/local .
  popd >& /dev/null
popd >& /dev/null

echo "...finished $(basename $0)"
