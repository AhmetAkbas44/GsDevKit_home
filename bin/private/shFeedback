ANSI_RED="\033[31;1m"
ANSI_GREEN="\033[32;1m"
ANSI_YELLOW="\033[33;1m"
ANSI_RESET="\033[0m"

banner_error() {
  printf "${ANSI_RED}%s${ANSI_RESET}\n" "$1" 1>&2
  exit 1
}

banner_finished() {
  printf "${ANSI_YELLOW}%s${ANSI_RESET}\n" "$1" 1>&2
  exit 0
}
