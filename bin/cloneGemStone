#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] [-c https | ssh ]


OPTIONS
  -h
     display help
  -c https | ssh
     clone using https (https://github.com) or ssh (git@github.com)
     ssh is the default 

EXAMPLES
   $(basename $0) -h
   $(basename $0) 
   $(basename $0) -c ssh
   $(basename $0) -c https

HELP
}
useHttpsForGit=${GS_HOME}/bin/.useHttpsForGit

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi

if [ -d "$useHttpsForGit" ] ; then
  mode="https"
else
  mode="ssh"
fi

while getopts ":hc:" OPT ; do
  case "$OPT" in
    h) usage; exit 0;;
    c) mode="${OPTARG}";;
    *) usage; exit 1;;
  esac
done
shift $(($OPTIND - 1))

if [ "${mode}" = "ssh" ] ; then
  rm -rf $useHttpsForGit
  url="git@github.com:GsDevKit/GsDevKit_gemstone.git"
elif [  "${mode}" = "https" ] ; then
  touch $useHttpsForGit
  url="https://github.com/GsDevKit/GsDevKit_gemstone.git"
else 
  usage; exit 1
fi

git clone ${url} gemstone

