#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <client-name>...
Delete the named client.

OPTIONS
  -h 
     display help

EXAMPLES
  $(basename $0) -h
  $(basename $0) tode
  $(basename $0) gemtools_329
  $(basename $0) jade_329

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env
if [ "${GS_GS_CLIENT_DEV}x" = "x" ] ; then
  echo "no clients installed"
  exit 0
fi

source ${GS_HOME}/bin/private/shFunctions
getOpts_help $@

if [ $# -lt 1 ]; then
  echo "missing client name args"; usage; exit 1
fi

for clientName in "$@"
do
  if [ -d "${GS_GS_CLIENT_DEV_CLIENTS}/$clientName/" ] ; then
    deleteCmd="`${GS_GS_CLIENT_DEV_CLIENTS}/$clientName/deleteClient $clientName`"
    $deleteCmd
  else
    echo "client $clientName does not exist"
  fi
done

echo "...finished $(basename $0)"
