#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <stone-name> <gemstone-version> 
Create a new stone named <stone-name> with tODE and Seaside31 installed.

OPTIONS
  -h display help

EXAMPLES
  $(basename $0) -h
  $(basename $0) seaside_329 3.2.9
"
HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/private/shFunctions
getOpts_help $@

if [ $# -ne 2 ]; then
  usage; exit 1
fi
stoneName="$1"
gsvers="$2"

$GS_HOME/bin/createStone $stoneName $gsvers

$GS_HOME/projects/seaside31/bin/seasideInstall $stoneName

echo "...finished $(basename $0)"
