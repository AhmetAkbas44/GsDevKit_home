bu backup --safely pre-rebuild.dbf   # make a backup of repository prior to rebuild
bu snapshot --safely pre-rebuild.dbf # make a snapshot of repository prior to rebuild
script --script=rebuildSys           # rebuild the in-image tODE /sys structure
bu backup home.dbf                   # backup of newly rebuilt /sys structure
bu snapshot home.dbf                 # make a snapshot of newly rebuilt /sys structure
